<% content_for :page_header do %>
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h1 class="">Welcome, <%= current_user.username %></h1>
    </div>
    <div>
      <h5 class="text-muted mb-0">
        <i class="bi bi-clock me-2"></i>
        <%# Span display current time and iterates it every second with the script at the bottom %>
        <span id="currentDateTime"></span>
      </h5>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="w-100">
      <div class="card">
        <div class="card-header bg-dark">
          <div class="d-flex align-items-center">
            <h5 class="mb-0 text-white"><i class="bi bi-calendar-week me-2"></i> This Week's Events</h5>
          </div>
        </div>

        <div class="card-body p-0">

          <%# Display next weeks events only if they exist %>
          <% if @events_this_week.any? %>
            <div class="list-group list-group-flush">
              <% @events_this_week.each do |event| %>
                <%= link_to root_path, class: "list-group-item list-group-item-action" do %>
                  <div class="row align-items-center">
                    <div class="col-8">
                      <h6 class="mb-1"><%= event.name %></h6>
                      <p class="mb-0 text-muted small">
                        <i class="bi bi-people me-1"></i>
                        <% if event.group.personal? %>
                          My Event
                        <% else %>
                          <%= event.group.name %>
                        <% end %>

                        <% if event.location.present? %>
                          <span class="ms-2"><i class="bi bi-geo-alt me-1"></i><%= event.location %></span>
                        <% end %>
                      </p>
                    </div>

                    <%# Decides how start and end date is displayed based on event length/end date presence%>
                    <%# No end date: only start datetime %>
                    <%# Start and end date same day: start datetime and end time %>
                    <%# Start and end diff. day: start datetime and end datetime %>
                    <div class="col-4 text-end">
                      <small class="text-muted">
                        <%= event.start_date.strftime("%Y-%m-%d") %>

                        <% if event.end_date.present? %>
                          <% if event.end_date.to_date > event.start_date.to_date %>
                            - <%= event.end_date.strftime("%Y-%m-%d") %>
                          <% end %>
                          <br>
                          <%= event.start_date.strftime("%H:%M") %> - <%= event.end_date.strftime("%H:%M") %>
                        <% else %>
                          <br>
                          <%= event.start_date.strftime("%H:%M") %>
                        <% end %>
                      </small>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>

          <%# This is displayed if there are no events this week for the user %>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-calendar2-x fs-1 text-muted"></i>
              <p class="mt-3 mb-0">No events this week</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
    // Update time every second
    function updateDateTime() {
        const now = new Date();
        document.getElementById("currentDateTime").textContent = now.toLocaleString("hu-HU");
        setTimeout(updateDateTime, 1000);
    }
    document.addEventListener("DOMContentLoaded", updateDateTime);
</script>