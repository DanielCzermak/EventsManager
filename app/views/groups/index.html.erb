<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="card-header bg-dark">
        <div class="d-flex align-items-center justify-content-between">
          <h5 class="mb-0 text-white"><i class="bi bi-people-fill me-2"></i> Your Groups</h5>
          <%= link_to "New Group", new_group_path, class: "btn btn-dark border border-light" %>
        </div>
      </div>

      <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <%= render partial: "user_group", collection: @user_groups, as: :group %>
          </div>
      </div>
    </div>
  </div>
  <div class="col-6">
    <div class="card">
      <div class="card-header bg-dark">
        <div class="d-flex align-items-center justify-content-between">
          <h5 class="my-2 text-white"><i class="bi bi-people-fill me-2"></i> Public Groups</h5>
          <%= form_with url: join_groups_path, method: :post, local: true, html: { class: "d-flex align-items-center" } do |form| %>
            <%= form.text_field :joinCode, class: "form-control me-2", placeholder: "Enter join code", required: true %>
            <%= form.submit "Join Group", class: "btn btn-dark border border-light" %>
          <% end %>
        </div>
      </div>

      <div class="card-body p-0">
        <div class="list-group list-group-flush">
          <% if @public_groups.any? %>
            <%= render partial: "user_group", collection: @public_groups, as: :group %>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-person-fill-exclamation fs-1 text-muted"></i>
              <p class="mt-3 mb-0">No public groups available</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
